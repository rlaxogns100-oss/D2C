# 1. 메인 랜딩 페이지 (maejang.com)
maejang.com {
    root * /home/ubuntu/D2C/01_Homepage
    file_server
    try_files {path} {path}/ /index.html
    
    log {
        output file /var/log/caddy/maejang.access.log
    }
}

# 2. pizzaschool 서브도메인
pizzaschool.maejang.com {
    
    # [우선순위 1] 백엔드 API
    handle /api/* {
        reverse_proxy localhost:8080
    }

    # [우선순위 2] 관리자 페이지
    
    # /admin (슬래시 없음) 접속 시 /admin/ 으로 강제 리다이렉트
    redir /admin /admin/

    handle_path /admin/* {
        root * /home/ubuntu/D2C/00_Admin
        file_server
        try_files {path} {path}/ /index.html
    }
    
    # /owner (점주 페이지)
    handle_path /owner/* {
        root * /home/ubuntu/D2C/02_Owner
        file_server
        rewrite / /01_Loading.html
        try_files {path} {path}/ /01_Loading.html
    }

    # [우선순위 3] 나머지 모든 요청 (고객용 정적 파일)
    handle {
        root * /home/ubuntu/D2C/03_Customer
        file_server
        
        # 루트(/) 접속 시 무조건 01_Loading.html로 내부 변경
        rewrite / /01_Loading.html
        
        try_files {path} {path}/ /01_Loading.html
    }

    log {
        output file /var/log/caddy/pizzaschool.access.log
    }
}
